<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#0099e5"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/andela"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shafique Kabali"
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:background="#6a737b" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:text="Track:"/>

        <TextView
            android:id="@+id/txt_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/track"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Android"/>


        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/track"
            android:textSize="15dp"
            android:text="Country:"/>

        <TextView
            android:id="@+id/txt_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/country"
            android:layout_below="@id/txt_track"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Uganda"/>


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/country"
            android:textSize="15dp"
            android:text="Email:"/>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/email"
            android:layout_below="@id/txt_country"
            android:gravity="center"
            android:textSize="15dp"
            android:text="kabalishafique@gmail.com"/>


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:layout_below="@id/email"
            android:text="Phone Number:"/>

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/phone"
            android:layout_below="@id/txt_email"
            android:gravity="center"
            android:textSize="15dp"
            android:text="+256700146817"/>


        <TextView
            android:id="@+id/slack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/phone"
            android:textSize="15dp"
            android:text="Slack Username:"/>

        <TextView
            android:id="@+id/txt_slack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/phone"
            android:layout_below="@id/txt_phone"
            android:gravity="center"
            android:textSize="15dp"
            android:text="@string/slack"/>


    </RelativeLayout>



</LinearLayout>
